
form(action=(book ? '/books/update' : '/books'), method="POST")
  if book
    input(type="hidden", name="id", value=book.id)
  .form-group
    label Title
    input.form-control(name="book[title]", required, value=(book ? book.title : "")) 

  .form-group
    label Author
    input.form-control(name="book[author]", required, value=(book ? book.author : "")) 

  .form-group
    label In My Library
    select.form-control(name="book[status]", required)
      each status in ['YES', 'NOT']
        option(value=status, selected=(book && book.status === status))= status.toLowerCase()

  .form-group
    button.btn.btn-dark(type="submit") Submit